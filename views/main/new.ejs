<% include ../partials/header %>
    <div class="row">
        <h1 style="text-align: center">Create a BlogChain blog</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/blogs" method="POST" enctype="multipart/form-data">
              <div class="input-field col s6">
                  <input id="name" type="text" class="validate" name = "name">
                  <label for="name">Title</label>
              </div>
              <div class="input-field col s12">
                  <textarea id="description" type="text" class="validate materialize-textarea" name = "description"></textarea>
                  <label for="description">Write here...</label>
              </div>
              <div class ="input-field col s12">
                  <label>Image</label>
                  <input type = "file" name="image" accept="image/png, image/jpeg, image/jpg, image/gif" placeholder = "Select Image">
              </div>
              <div class="input-field col s3">
                <button class="btn waves-effect waves-light" type="submit" name="action">Submit
                  <i class="material-icons right">send</i>
                </button>
              </div>
            </form>
        </div>
        <div>
          <a href="/blogs">Go Back</a>
        </div>
    </div>
<% include ../partials/footer %>
